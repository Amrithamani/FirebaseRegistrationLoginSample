<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/forgetTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgetTextView"
        android:layout_marginTop="5dp"
        android:hint="Enter valid email"
        android:imeOptions="actionDone"
        android:padding="10dp" />

    <Button
        android:id="@+id/save_new_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_password"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:onClick="onClick"
        android:text="Save Changes" />

    <Button
        android:id="@+id/cancel_new_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/email_password"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:onClick="onClick"
        android:text="Cancel" />


</RelativeLayout>